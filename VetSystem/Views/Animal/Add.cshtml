@using VetSystem.Core.ViewModels.Animal
@using VetSystem.Core.ViewModels.Breed
@model AddAnimalViewModel

<div class="row">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Kilograms"></label>
            <input asp-for="Kilograms" class="form-control" />
        </div>
        <select class="form-control text-primary" id="breeds" asp-for="BreedName">
            <option selected disabled>--- Select Breed ---</option>
            @foreach (var breed in (IEnumerable<AddAnimalViewModel>)this.ViewData["breeds"])
            {
                <option value="@breed.BreedName">@breed.BreedName</option>
            }
        </select>
        <select class="form-control text-primary" id="breeds" asp-for="DiseaseName">
            <option selected disabled>--- Select Disease ---</option>
            @foreach (var breed in (IEnumerable<AddAnimalViewModel>)this.ViewData["diseases"])
            {
                <option value="@breed.DiseaseName">@breed.DiseaseName</option>
            }
        </select>
        <input class="btn text-black btn-info text-center " type="submit" value="Add" />
    </form>
</div>
