@using VetSystem.Core.Models
@using VetSystem.Infrastructure.Data
@model AddAnimalViewModel

<div class="row">
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Kilograms"></label>
        <input asp-for="Kilograms" class="form-control" />
    </div>
    <div>
        <label asp-for="OwnerId"></label>
        <input asp-for="OwnerId" class="form-control" />

    </div>
    <div class="row">
        @Html.DisplayNameFor(s => s.BreedId)
        @Html.DropDownListFor(s => s.BreedId, new SelectList(Model.BreedName))
    </div>
    
    <div class="form-group">
        <label asp-for="DiseaseId"></label>
        <input asp-for="DiseaseId" class="form-control" />
    </div>

    <input class="btn text-black btn-info text-center " type="submit" value="Add" />
</form>
    </div>
