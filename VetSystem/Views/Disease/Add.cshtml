@using VetSystem.Core.ViewModels.DiseaseCategory
@using VetSystem.Core.ViewModels.Disiese
@model AddDisieseViewModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <select class="form-control text-primary" id="diseaseCategory" asp-for="DiseaseCategories">
        <option selected disabled>--- Select Disease Category ---</option>
        @foreach (var diseaseCategory in (IEnumerable<DiseaseCategoryViewDataModel>)this.ViewData["diseaseCategory"])
        {
            <option value="@diseaseCategory.Name">@diseaseCategory.Name</option>
        }
    </select>
    <input class="btn text-black btn-info text-center " type="submit" value="Add" />
</form>